@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Olvidó su contraseña</title>
    <link rel="stylesheet" href="~/css/OlvidoContra.css">
</head>
<body>
 
    <div class="container">
        <h1>Recuperar contraseña</h1>
        <p>Ingresa el número de celular con el que se registró para recuperar tu cuenta.</p>
        <form id="formularioRecuperacion" asp-controller="Login" asp-action="Olvidocontrasenia" method="POST">
            <input type="tel" placeholder="+573102268473" id="celular" name="phoneNumber" required>
            <div class="botones">
                <a href="@Url.Action("Login", "Login")" class="link">Cancelar</a>
                <button type="submit" id="enviarCodigo" class="link">Enviar Código</button>
            </div>
        </form>
    </div>
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            var errorMessage = "@TempData["ErrorMessage"]";
            alert(errorMessage);
        </script>
    }

</body>
</html>
