@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/IngresarCodigo.css">
</head>
<body>
    <div class="container">
        <h1>Ingresar el código de seguridad</h1>
        <p>Ingrese el código de 6 dígitos enviado a su número de teléfono.</p>
        <form asp-controller="Login" asp-action="VerificarCodigo" method="post">
            <input type="number" placeholder="Ingrese código" id="codigo" name="codigo" required minlength="6" maxlength="6">
            <div class="botones">
                <a href="@Url.Action("Login", "Login")" class="link">Cancelar</a>
                <button type="submit" id="validarCodigo" class="link">continuar</button>
            </div>
        </form>
    </div>
</body>
</html>
